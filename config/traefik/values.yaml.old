deployment:
  kind: Deployment

# Enable CRD installation - this will install all required CRDs
installCRDs: true

# Enable Kubernetes Ingress provider
providers:
  kubernetesIngress:
    enabled: true
    namespaces: []
    publishedService:
      enabled: true

# Enable cert-manager integration
additionalArguments:
  - "--certificatesresolvers.default.acme.email=your-email@example.com"
  - "--certificatesresolvers.default.acme.storage=/data/acme.json"
  - "--certificatesresolvers.default.acme.tlschallenge=true"
  - "--providers.kubernetesingress.ingressclass=traefik"

# Create persistent volume for acme.json
persistence:
  enabled: true
  accessMode: ReadWriteOnce
  size: 128Mi
  path: /data

# Service configuration for LoadBalancer
service:
  enabled: true
  type: LoadBalancer
  annotations:
    # External DNS integration
    external-dns.alpha.kubernetes.io/hostname: "traefik.everythingascode.dev"

# Dashboard and API
ingressRoute:
  dashboard:
    enabled: true

# Ports configuration
ports:
  web:
    port: 8000
    expose: true
    exposedPort: 80
    protocol: TCP
  websecure:
    port: 8443
    expose: true
    exposedPort: 443
    protocol: TCP

# Resource limits
resources:
  requests:
    cpu: "100m"
    memory: "50Mi"
  limits:
    cpu: "300m"
    memory: "150Mi"